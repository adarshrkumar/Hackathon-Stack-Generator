---
import Nav from '../components/app/Nav.astro';
import Footer from '../components/Footer.astro';

import '../styles/reset.scss';
import '../styles/layouts/Layout.scss';
import '../styles/layouts/App.scss';

const { title } = Astro.props;

const sTitle = 'Stack Generator App';

const pageIsHome = !title || title === '' || title === 'Home' || title === 'Index' || title === sTitle  ;

let pTitle
if (pageIsHome) {
    pTitle = sTitle;
} else {
    pTitle = `${title} | ${sTitle}`;
}
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{pTitle}</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
        <script src="https://kit.fontawesome.com/5a56375a95.js" crossorigin="anonymous"></script>
    </head>
    <body class="app-layout">
        <Nav />

        <main class="main app">
            <slot />
        </main>

        <Footer />
    </body>
</html>