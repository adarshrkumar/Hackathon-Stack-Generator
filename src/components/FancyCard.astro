---
/**
 * FancyCard Component
 *
 * A reusable card component with customizable styling options.
 * Provides a styled container with configurable padding, width, and alignment.
 *
 * Props:
 * - padding (string): Custom padding value (default: "1.5rem")
 * - maxWidth (string): Maximum width of the card (optional)
 * - centered (boolean): Whether to center the card horizontally (default: false)
 *
 * Features:
 * - Flexible styling through props
 * - Slots for custom content
 * - Responsive design via SCSS
 * - Auto-centering option
 *
 * Usage:
 * <FancyCard padding="2rem" maxWidth="600px" centered={true}>
 *   <h2>Card Title</h2>
 *   <p>Card content...</p>
 * </FancyCard>
 */

// Extract props with default values
const { padding = "1.5rem", maxWidth, centered = false } = Astro.props;
---

<!-- Card Container with Dynamic Inline Styles -->
<div
    class="fancy-card"
    style={`padding: ${padding}; ${maxWidth ? `max-width: ${maxWidth};` : ''} ${centered ? 'margin-left: auto; margin-right: auto;' : ''}`}
>
    <!-- Slot: Card content injected here -->
    <slot />
</div>

<!-- Component Styles -->
<style lang="scss">
    @use '../styles/components/fancy-card.scss';
</style>
